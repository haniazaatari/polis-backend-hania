while [ 1 ]
do
  echo "                                                           "
  echo "XXXXXXXXXXXXXXXXXX REBOOTING MATH WORKER XXXXXXXXXXXXXXXXXX"
  echo "XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"
  echo "                                                           "

  if [ "$MATH_ENV" = "prod" ]; then
    echo "Production environment detected. Attaching Datadog agent with profiling."
    timeout -s KILL 14400 clojure \
      -J-javaagent:/app/dd-java-agent.jar \
      -J-Ddd.profiling.enabled=true \
      -J-XX:FlightRecorderOptions=stackdepth=256 \
      -J-Ddd.logs.injection=true \
      -J-Ddd.trace.sample.rate=1 \
      -J-Ddd.git.repository_url="github.com/compdemocracy/polis" \
      -J-Ddd.service=math \
      -J-Ddd.env=prod \
      -M:run full
  else
    echo "Non-production environment ($MATH_ENV). Running without Datadog agent."
    timeout -s KILL 14400 clojure -M:run full
  fi
done