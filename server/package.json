{
  "name": "polis",
  "version": "0.1.0",
  "description": "polis =====",
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "debug": "SERVER_LOG_LEVEL=debug nodemon --inspect=0.0.0.0:9229 index.js",
    "dev": "nodemon --inspect=0.0.0.0:9229 index.js",
    "serve": "node index.js",
    "start": "npm run serve",
    "start:watch": "nodemon index.js",
    "fix-imports": "node bin/add-extensions.js",
    "clean": "rm -rf dist",
    "build": "npm run fix-imports && npm run clean && tsc --pretty",
    "rebuild": "./bin/rebuild-js.sh",
    "lint": "biome lint --write",
    "lint:unsafe": "biome lint --write --unsafe",
    "lint:list": "biome lint 2>&1 | grep 'Users' | sed 's/:.*//' | sed 's|.*/server/||' | sort | uniq",
    "format": "biome format --write",
    "check": "biome check --max-diagnostics=none",
    "check:fix": "biome check --write --unsafe",
    "db:reset": "node bin/db-reset.js",
    "eslint": "eslint .",
    "eslint:fix": "eslint . --fix",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:unit": "npm test -- /__tests__/unit/",
    "test:integration": "npm test -- /__tests__/integration/",
    "test:feature": "npm test -- /__tests__/feature/ --testPathIgnorePatterns=[]"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/pol-is/polisServer.git"
  },
  "author": "",
  "license": "AGPL-3.0",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@anthropic-ai/tokenizer": "^0.0.4",
    "@aws-sdk/client-dynamodb": "^3.777.0",
    "@aws-sdk/lib-dynamodb": "^3.777.0",
    "@google-cloud/translate": "~8.5.1",
    "@google/generative-ai": "^0.24.0",
    "@tevko/sensemaking-tools": "^1.0.15",
    "akismet": "~0.0.13",
    "async": "^3.2.6",
    "aws-sdk": "~2.1692.0",
    "badwords": "~1.0.0",
    "bcryptjs": "~3.0.2",
    "bluebird": "~3.7.2",
    "boolean": "~0.2.0",
    "connect-timeout": "~1.9.0",
    "csv-parse": "^5.6.0",
    "dotenv": "^16.4.7",
    "express": "~3.21.2",
    "glob": "^11.0.1",
    "googleapis": "^148.0.0",
    "html-entities": "^2.5.3",
    "http-proxy": "~1.18.1",
    "js2xmlparser": "^5.0.0",
    "lru-cache": "^11.1.0",
    "morgan": "^1.10.0",
    "nodemailer": "~6.10.0",
    "nodemailer-mailgun-transport": "~2.1.5",
    "oauth": "~0.10.2",
    "openai": "^4.90.0",
    "pg": "~8.14.1",
    "pg-connection-string": "~2.7.0",
    "pg-query-stream": "^4.8.1",
    "replacestream": "~4.0.3",
    "request-promise": "~4.2.6",
    "response-time": "~2.3.3",
    "simple-xml-to-json": "^1.2.3",
    "source-map-support": "~0.5.21",
    "sql": "~0.78.0",
    "underscore": "~1.13.7",
    "valid-url": "~1.0.9",
    "winston": "~3.17.0",
    "xmlbuilder2": "^3.1.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@eslint/js": "^9.23.0",
    "eslint": "^9.23.0",
    "eslint-plugin-sonarjs": "^3.0.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "supertest": "^7.1.0",
    "typescript": "^5.8.2"
  }
}
