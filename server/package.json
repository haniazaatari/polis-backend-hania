{
  "name": "polis",
  "version": "0.1.0",
  "description": "polis =====",
  "main": "app.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "debug": "SERVER_LOG_LEVEL=debug nodemon --inspect=0.0.0.0:9229 app.js",
    "dev": "nodemon --inspect=0.0.0.0:9229 app.js",
    "serve": "node app.js",
    "start": "npm run serve",
    "start:watch": "nodemon app.js",
    "fix-imports": "node bin/add-extensions.js",
    "clean": "rm -rf dist",
    "build": "npm run fix-imports && npm run clean && tsc --pretty",
    "lint": "biome lint --write",
    "lint:unsafe": "biome lint --write --unsafe",
    "lint:list": "biome lint 2>&1 | grep 'Users' | sed 's/:.*//' | sed 's|.*/server/||' | sort | uniq",
    "format": "biome format --write",
    "check": "biome check --max-diagnostics=none",
    "check:fix": "biome check --write --unsafe",
    "db:reset": "node bin/db-reset.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --detectOpenHandles --forceExit",
    "test:unit": "npm test -- --testPathIgnorePatterns=integration",
    "test:integration": "npm test -- --testPathPattern=integration"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/pol-is/polisServer.git"
  },
  "author": "",
  "license": "AGPL-3.0",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@anthropic-ai/tokenizer": "^0.0.4",
    "@aws-sdk/client-dynamodb": "^3.758.0",
    "@aws-sdk/lib-dynamodb": "^3.758.0",
    "@google-cloud/aiplatform": "^3.35.0",
    "@google-cloud/translate": "~1.1.0",
    "@google-cloud/vertexai": "^1.9.3",
    "@google/generative-ai": "^0.24.0",
    "@sinclair/typebox": "^0.34.29",
    "@tevko/sensemaking-tools": "^1.0.15",
    "akismet": "~0.0.13",
    "async": "~0.9.2",
    "aws-sdk": "^2.1692.0",
    "badwords": "~1.0.0",
    "bcryptjs": "~2.4.3",
    "body-parser": "^1.20.3",
    "boolean": "~0.2.0",
    "colors": "^1.4.0",
    "compression": "^1.8.0",
    "connect-timeout": "~1.9.0",
    "cookie-parser": "^1.4.7",
    "csv-parse": "^5.6.0",
    "csv-to-xml": "^2.0.0",
    "diff": "^7.0.0",
    "dotenv": "^16.4.7",
    "express": "~3.21.2",
    "glob": "^11.0.1",
    "googleapis": "^146.0.0",
    "html-entities": "^2.5.2",
    "http-proxy": "~1.18.1",
    "js2xmlparser": "^5.0.0",
    "lru-cache": "~3.2.0",
    "mimelib": "^0.3.1",
    "morgan": "^1.10.0",
    "nan": "^2.22.2",
    "nodemailer": "^6.10.0",
    "nodemailer-mailgun-transport": "^2.1.5",
    "oauth": "^0.10.0",
    "openai": "^4.86.2",
    "optimist": "^0.6.1",
    "p3p": "~0.0.2",
    "pg": "^8.13.3",
    "pg-connection-string": "^2.7.0",
    "pg-native": "^3.2.0",
    "pg-query-stream": "^4.7.3",
    "replacestream": "^4.0.3",
    "request": "~2.88.2",
    "request-promise": "~4.2.6",
    "response-time": "^2.3.3",
