{
  "compilerOptions": {
    "declaration": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmitOnError": false,
    "noImplicitAny": false,
    "outDir": "./dist",
    "removeComments": true,
    "rootDir": "./",
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": false,
    "target": "ES2022",
    "verbatimModuleSyntax": false
  },
  "include": ["app.ts", "src-ts/**/*"]
}
